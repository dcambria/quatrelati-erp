# =====================================================
# Backend Environment Variables
# Copy to .env and fill in values
# =====================================================

# Server
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://quatrelati:your-password@localhost:5432/quatrelati
DB_HOST=localhost
DB_PORT=5432
DB_USER=quatrelati
DB_PASSWORD=your-password
DB_NAME=quatrelati

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@quatrelati.com.br

# WhatsApp/Twilio (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# File Upload (optional)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Redis (optional - for sessions/cache)
REDIS_URL=

# Monitoring (optional)
SENTRY_DSN=

# =====================================================
# Configuracoes do Backend - Quatrelati API
# =====================================================

# Servidor
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Banco de Dados
DATABASE_URL=postgres://quatrelati:quatrelati2026@localhost:5432/quatrelati_pedidos

# JWT (OBRIGATORIO - aplicacao nao inicia sem estas variaveis)
JWT_SECRET=your-jwt-secret-here-min-32-chars
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here-min-32-chars

# CORS
CORS_ORIGIN=http://localhost:3000

# =====================================================
# Twilio (WhatsApp) - Opcional
# =====================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# =====================================================
# Email (SMTP) - Opcional
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@quatrelati.com.br

